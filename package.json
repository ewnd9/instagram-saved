{
  "name": "instagram-saved-posts-scraper",
  "version": "1.0.0",
  "description": "Scrape Instagram saved posts and store them in PostgreSQL",
  "main": "dist/index.js",
  "packageManager": "yarn@4.3.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc && yarn workspace @instagram-scraper/cli build",
    "build:core": "tsc",
    "build:cli": "yarn workspace @instagram-scraper/cli build",
    "start": "yarn build:core && node dist/index.js",
    "dev": "yarn build:core && node dist/index.js",
    "cli:scrape": "yarn build && HEADLESS=false yarn workspace @instagram-scraper/cli start",
    "watch": "tsc --watch",
    "clean": "rm -rf dist && yarn workspace @instagram-scraper/cli clean",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "keywords": [
    "instagram",
    "scraper",
    "postgresql",
    "playwright",
    "saved-posts"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@playwright/test": "1.55.0",
    "dotenv": "^17.2.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.5",
    "pg": "^8.16.3",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/pg": "^8",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
