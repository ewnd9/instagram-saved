{
  "name": "instagram-saved-posts-scraper",
  "version": "1.0.0",
  "description": "Scrape Instagram saved posts and store them in PostgreSQL",
  "main": "dist/index.js",
  "packageManager": "yarn@4.3.1",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "dev": "npm run build && HEADLESS=false node dist/index.js",
    "scrape": "npm run build && node dist/index.js",
    "scrape:details": "npm run build && node dist/index.js --details",
    "watch": "tsc --watch",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "instagram",
    "scraper",
    "postgresql",
    "puppeteer",
    "saved-posts"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^17.2.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.5",
    "pg": "^8.16.3",
    "puppeteer": "^24.17.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/pg": "^8",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
